{
    "name": "elasticsearch-migrations",
    "version": "1.0.2",
    "description": "A migration tool for Elasticsearch.",
    "main": "src/index.js",
    "author": "Chris Banks <github@christopherbradleybanks.com>",
    "scripts": {
        "prepare": "scripts/prepare.sh",
        "release": "np --no-tests",
        "test": "echo 'Error: no test specified'",
        "eslint": "eslint --fix ."
    },
    "bin": {
        "elastic-migrate": "./bin/cli.js"
    },
    "keywords": [
        "migrate",
        "migrations",
        "elastic",
        "elasticsearch",
        "schema",
        "db",
        "nosql",
        "seed",
        "knex"
    ],
    "dependencies": {
        "@elastic/elasticsearch": "^8.7.0",
        "colors": "^1.4.0",
        "dotenv": "^10.0.0",
        "yargs": "^17.3.0"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/christopherbradleybanks/elasticsearch-migrations.git"
    },
    "license": "MIT",
    "engines": {
        "node": "^14.17.0 || ^16.0.0 || >= 18.0.0"
    },
    "devDependencies": {
        "eslint": "^8.41.0",
        "eslint-config-google": "^0.14.0",
        "eslint-plugin-putout": "^17.6.0",
        "husky": "^8.0.3",
        "lint-staged": "^13.2.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx}": [
            "eslint --fix",
            "git add"
        ]
    }
